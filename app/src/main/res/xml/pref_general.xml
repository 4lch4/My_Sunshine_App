<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />
    <ListPreference
        android:title="@string/pref_temp_units_title"
        android:key="@string/pref_temp_units_key"
        android:defaultValue="@string/pref_temp_units_default"
        android:summary="%s"
        android:entryValues="@array/temp_units_values"
        android:entries="@array/temp_units_entries" />
</PreferenceScreen>